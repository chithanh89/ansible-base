[Unit]
Description=Alertmanager Service
Wants=network-online.target
After=network-online.target

[Service]
User={{ alertmanager_user }}
Group={{ alertmanager_group }}
Restart=always
RestartSec=2
StartLimitInterval=0
Type=simple
ExecStart={{alertmanager_execute_dir}}/alertmanager --config.file=/etc/alertmanager/alertmanager.yml --storage.path=/data/alertmanager

[Install]
WantedBy=multi-user.target
