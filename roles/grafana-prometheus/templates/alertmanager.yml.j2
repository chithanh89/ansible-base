global:
  slack_api_url: '{{slack_webhook_url}}'

route:
  group_by: ['instance', 'severity']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 3h
  routes:
  - match:
      alertname: {{alertname}}
  receiver: 'alert-team'

receivers:
- name: 'alert-team'
  slack_configs:
  - channel: "{{slack_channel}}"
    text: "summary: {{ .CommonAnnotations.summary }}\ndescription: {{ .CommonAnnotations.description }}"
